extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-error(5000)

    h1(class="mb-4") Thêm mới bài viết 

    form(
        action=`${prefixAdmin}/blogs/create`
        method="POST"
        ectype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Tên bài viết: *
            input(
                type="text"
                id="title"
                name="title"
                class="form-control"
                required
            )
        div(class="form-group")
            label(for="description") Mô tả: *
            input(
                type="text"
                id="description"
                name="description"
                class="form-control"
                required
            )
        div(class="form-group")
            label(for="url") Link dịch vụ: *
            input(
                type="text"
                id="url"
                name="url"
                class="form-control"
                required
            )
        div(class="form-group")
            label(for="content") Nội dung: *
            textarea(
                type="text"
                id="content"
                name="content"
                class="form-control"
                rows="5"
                required
            )
        div(
            class="form-group"
            upload-image
        )
            label(for="avatar") Hình ảnh 
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            img(
                src=""
                class="image-preview"
                upload-image-preview
            )
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới
        