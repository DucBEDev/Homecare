extends ../../layouts/default.pug
include ../../mixins/alert.pug


block main 
    +alert-success("3000")

    h1 Quản lý bài viết

    .card.mb-3 
        .card-header Danh sách
        .card-body 
            .row 
                .col-4 
                    a(
                        href=`${prefixAdmin}/blogs/create`
                        class="btn btn-outline-success"
                    ) +Thêm mới
            .row
                table(
                    class="table table-hover table-sm mt-4"
                )
                    thead   
                        tr 
                            th STT 
                            th Tiêu đề
                            th Ngày đăng
                            th Tác giả
                            th Hoạt động
                    tbody 
                        if (blogs.length > 0)
                            each item, index in blogs 
                                tr 
                                    td #{index + 1}
                                    td #{index.title}
                                    td #{item.date}
                                    td #{item.author}
                                    td 
                                        a(
                                            href=`${prefixAdmin}/blogs/detail/${item.id}`
                                            class="btn btn-secondary btn-sm"
                                        ) Chi tiết 
                                        a(
                                            href=`${prefixAdmin}/blogs/edit/${item.id}`
                                            class="btn btn-warning btn-sm"
                                        ) Sửa
                                        button(
                                            class="btn btn-danger btn-sm"
                                            button-delete
                                            data-id=item.id
                                        ) Xóa 
    
